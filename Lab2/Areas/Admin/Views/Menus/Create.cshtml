@model Lab2.Entities.Menu
<div class="row">

<hr />
<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Horizontal Form</h4>
            <p class="card-description"> Horizontal form layout </p>
            <form asp-action="Create" class="forms-sample">
                <div class="form-group row">
                    <label asp-for="Name" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Link" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="Link" class="form-control" />
                        <span asp-validation-for="Link" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Meta" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="Meta" class="form-control" />
                        <span asp-validation-for="Meta" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row form-check">
                    <div class="col-sm-9 offset-sm-3">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Hide" /> @Html.DisplayNameFor(model => model.Hide)
                        </label>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Order" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="Order" class="form-control" />
                        <span asp-validation-for="Order" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Span" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="Span" class="form-control" />
                        <span asp-validation-for="Span" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="DateBegin" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="DateBegin" class="form-control" />
                        <span asp-validation-for="DateBegin" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Icon" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="Icon" class="form-control" />
                        <span asp-validation-for="Icon" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Badge" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="Badge" class="form-control" />
                        <span asp-validation-for="Badge" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="ParentMenuId" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <select asp-for="ParentMenuId" class="form-control" asp-items="ViewBag.ParentMenuId"></select>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-9 offset-sm-3">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
