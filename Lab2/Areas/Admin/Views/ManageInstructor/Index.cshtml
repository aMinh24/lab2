@model IEnumerable<Lab2.Entities.Instructor>

@{
    ViewData["Title"] = "Index";
}

<div class="row">

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-dark">
                    <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.About)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LinkFacebook)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LinkTwitter)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Avatar)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PrimaryTopic)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.AppUser)
                        </th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.About)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LinkFacebook)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LinkTwitter)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Avatar)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PrimaryTopic.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AppUser.Id)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.InstructorId">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.InstructorId">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.InstructorId">Delete</a>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
</div>