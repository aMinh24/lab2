@model Lab2.Entities.Instructor

@{
    ViewData["Title"] = "Create";
}

<div class="row">

<hr />
<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create Form</h4>
            <p class="card-description"> Fill in the details to create a new record </p>
            <form asp-action="Create" class="forms-sample">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <div class="form-group row">
                    <label for="UserId" class="col-sm-3 col-form-label">User</label>
                    <div class="col-sm-9">
                        <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="Name" class="col-sm-3 col-form-label">Name</label>
                    <div class="col-sm-9">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="About" class="col-sm-3 col-form-label">About</label>
                    <div class="col-sm-9">
                        <input asp-for="About" class="form-control" />
                        <span asp-validation-for="About" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="LinkFacebook" class="col-sm-3 col-form-label">Facebook</label>
                    <div class="col-sm-9">
                        <input asp-for="LinkFacebook" class="form-control" />
                        <span asp-validation-for="LinkFacebook" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="LinkTwitter" class="col-sm-3 col-form-label">Twitter</label>
                    <div class="col-sm-9">
                        <input asp-for="LinkTwitter" class="form-control" />
                        <span asp-validation-for="LinkTwitter" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="Avatar" class="col-sm-3 col-form-label">Avatar</label>
                    <div class="col-sm-9">
                        <input asp-for="Avatar" class="form-control" />
                        <span asp-validation-for="Avatar" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="TopicId" class="col-sm-3 col-form-label">Topic</label>
                    <div class="col-sm-9">
                        <select asp-for="TopicId" class="form-control" asp-items="ViewBag.TopicId"></select>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary mr-2" />
                </div>
            </form>
        </div>
    </div>
</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>
</div>

