@model Lab2.Entities.BlogPost

@{
    ViewData["Title"] = "Edit";
}
<div class="row">

<h1>Edit</h1>

<h4>BlogPost</h4>
<hr /><div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Edit Form</h4>
            <p class="card-description"> Edit your details </p>
            <form asp-action="Edit" class="forms-sample">
                <input type="hidden" asp-for="BlogPostId" />
                <div class="form-group row">
                    <label for="UserId" class="col-sm-3 col-form-label">User</label>
                    <div class="col-sm-9">
                        <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                        <span asp-validation-for="UserId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="Title" class="col-sm-3 col-form-label">Title</label>
                    <div class="col-sm-9">
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="Content" class="col-sm-3 col-form-label">Content</label>
                    <div class="col-sm-9">
                        <input asp-for="Content" class="form-control" />
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="CreatedAt" class="col-sm-3 col-form-label">Created At</label>
                    <div class="col-sm-9">
                        <input asp-for="CreatedAt" class="form-control" />
                        <span asp-validation-for="CreatedAt" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary mr-2" />
                </div>
            </form>
        </div>
    </div>
</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>
</div>

